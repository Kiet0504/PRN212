<Window x:Class="AppMediaMusic.PlaylistSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Playlist" Height="200" Width="400">
    <Grid>
        <TextBlock Text="Select a Playlist:" Margin="10" FontSize="16"/>
        <ComboBox x:Name="PlaylistComboBox" Margin="10,40,10,10" VerticalAlignment="Top"/>
        <Button Content="Add" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="AddToPlaylist_Click"/>
    </Grid>
</Window>
